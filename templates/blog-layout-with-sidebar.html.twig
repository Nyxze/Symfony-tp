{% extends 'blog-layout.html.twig' %}

    {% block sidebar %}
        <div class="col-md-4">
            <h3>La barre latérale</h3>

            <hr>
            <h4>Les auteurs</h4>
            <ul class="list-group">
                {% for author in authorList %}
                    <li class="list-group-item">
                        <a href="{{ path('blog_by_author', {'authorId': author.id}) }}">
                            {{ author.firstName }} {{ author.lastName }}
                            ({{ author.articleCount }})
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <hr>

            <hr>
            <h4>Les Catégories</h4>
            <ul class="list-group">
                {% for category in categoryList %}
                    <li class="list-group-item">
                        <a href="{{ path('blog_by_category', {'categoryId': category.id}) }}">
                            {{ category.categoryName }}
                            ({{ category.articleCount }})
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <hr>

            <hr>
            <h4>Les articles par années</h4>
            <ul class="list-group">
                {% for item in yearList %}
                    <li class="list-group-item">
                        <a href="{{ path('blog_by_year', {'year': item.year}) }}">
                            {{ item.year }}
                            ({{ item.articleCount }})
                        </a>
                    </li>
                {% endfor %}
            </ul>

            <hr>
        </div>
    {% endblock %}

